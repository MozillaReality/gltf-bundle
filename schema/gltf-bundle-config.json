{
  "$schema": "http://json-schema.org/draft-06/schema",
  "type": "object",
  "description": "A configuration file for use in the gltf-bundle tool.",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the bundle."
    },
    "output": {
      "type": "object",
      "properties": {
        "filePath": {
          "type": "string"
        }
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "anyOf": [
              {
                "enum": ["entity"]
              },
              {
                "enum": ["resource"]
              },
              {
                "type": "string"
              }
            ],
            "default": "entity"
          },
          "src": {
            "type": "string"
          },
          "components": {
            "type": "array",
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object"
                }
              ]
            }
          }
        },
        "required": ["name", "src"]
      },
      "minItems": 1
    }
  },
  "required": ["name", "assets", "version"]
}
